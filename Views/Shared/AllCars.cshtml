@model DydarShop.Data.Models.Car

<div class="col-lg-4 Model-item">
    <img class="img-thumbnail" src="@Model.Img" />
    <h2>@Model.Name</h2>
    <p>@Model.ShortDesc</p>
    <p>Цена: @Model.Price.ToString("c")</p>
    <p>
        <a class="btn btn-warning" asp-controller="ShopCart" asp-action="AddToCart" asp-route-id="@Model.Id">
            Добавить в корзину
        </a>
    </p>
</div>